<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DroidWiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/bg_2b53c5</item>
        <item name="colorPrimaryDark">@color/bg_2b53c5</item>
        <item name="colorAccent">@color/bg_2b53c5</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- 透明主题 -->
    <style name="NoTitleTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>